#!/usr/bin/env python3
"""
Test script to verify all connections before running the MCP server
"""

import os
import sys
from dotenv import load_dotenv

# Load environment variables
load_dotenv()

def test_environment():
    """Test if environment variables are set"""
    print("üîç Testing Environment Variables...")
    
    required_vars = [
        'MONGODB_URI',
        'DB_NAME', 
        'AZURE_OPENAI_ENDPOINT',
        'AZURE_OPENAI_KEY',
        'AZURE_OPENAI_DEPLOYMENT_NAME'
    ]
    
    all_set = True
    for var in required_vars:
        value = os.getenv(var)
        if value and value not in ["https://your-resource.openai.azure.com/", "your-azure-openai-api-key-here"]:
            print(f"  ‚úÖ {var}: Set")
        else:
            print(f"  ‚ùå {var}: Missing or using default")
            all_set = False
    
    return all_set

def test_mongodb():
    """Test MongoDB connection"""
    print("\nüîç Testing MongoDB Connection...")
    try:
        from db import get_database
        db = get_database()
        collections = db.list_collection_names()
        db_type = "Mock" if "MockDatabase" in str(type(db)) else "Real"
        print(f"  ‚úÖ MongoDB: Connected successfully ({db_type} database)")
        print(f"  üìÅ Collections: {collections}")
        return True
    except Exception as e:
        print(f"  ‚ùå MongoDB: Connection failed - {e}")
        return False

def test_azure_openai():
    """Test Azure OpenAI connection"""
    print("\nüîç Testing Azure OpenAI Connection...")
    try:
        from azure_client import AzureOpenAIClient
        client = AzureOpenAIClient()
        print(f"  ‚úÖ Azure OpenAI: Connected successfully")
        print(f"  ü§ñ Deployment: {client.deployment_name}")
        return True
    except Exception as e:
        print(f"  ‚ö†Ô∏è  Azure OpenAI: Connection issues - {e}")
        print("     The server will start with limited functionality")
        return False

def main():
    print("üß™ Flight MCP Server - Connection Tests")
    print("=" * 50)
    
    env_ok = test_environment()
    mongo_ok = test_mongodb()
    azure_ok = test_azure_openai()
    
    print("\n" + "=" * 50)
    print("üìä Test Results:")
    print(f"  Environment: {'‚úÖ OK' if env_ok else '‚ùå Issues'}")
    print(f"  MongoDB: {'‚úÖ OK' if mongo_ok else '‚ö†Ô∏è Using Mock'}")
    print(f"  Azure OpenAI: {'‚úÖ OK' if azure_ok else '‚ö†Ô∏è Limited'}")
    
    if mongo_ok:
        print("\nüéâ Server should work! (Basic functionality guaranteed)")
        if azure_ok:
            print("ü§ñ AI features are available!")
        else:
            print("‚ö†Ô∏è  AI features disabled due to SSL/connection issues")
    else:
        print("\n‚ö†Ô∏è  Server will use mock data for development")
    
    print("\nüí° Next step: Run 'python flight_mcp_server.py'")

if __name__ == "__main__":
    main()
