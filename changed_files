#!/usr/bin/env python3
"""
Test script to verify all connections before running the MCP server
"""

import os
import sys
from dotenv import load_dotenv

# Load environment variables
load_dotenv()

def test_environment():
    """Test if environment variables are set"""
    print("ğŸ” Testing Environment Variables...")
    
    required_vars = [
        'MONGODB_URI',
        'DB_NAME', 
        'AZURE_OPENAI_ENDPOINT',
        'AZURE_OPENAI_KEY',
        'AZURE_OPENAI_DEPLOYMENT_NAME'
    ]
    
    all_set = True
    for var in required_vars:
        value = os.getenv(var)
        if value and value not in ["https://your-resource.openai.azure.com/", "your-azure-openai-api-key-here"]:
            print(f"  âœ… {var}: Set")
        else:
            print(f"  âŒ {var}: Missing or using default")
            all_set = False
    
    return all_set

def test_mongodb():
    """Test MongoDB connection"""
    print("\nğŸ” Testing MongoDB Connection...")
    try:
        from db import get_database
        db = get_database()
        collections = db.list_collection_names()
        print(f"  âœ… MongoDB: Connected successfully")
        print(f"  ğŸ“ Collections: {collections}")
        return True
    except Exception as e:
        print(f"  âŒ MongoDB: Connection failed - {e}")
        return False

def test_azure_openai():
    """Test Azure OpenAI connection"""
    print("\nğŸ” Testing Azure OpenAI Connection...")
    try:
        from azure_client import AzureOpenAIClient
        client = AzureOpenAIClient()
        print(f"  âœ… Azure OpenAI: Connected successfully")
        print(f"  ğŸ¤– Deployment: {client.deployment_name}")
        return True
    except Exception as e:
        print(f"  âŒ Azure OpenAI: Connection failed - {e}")
        return False

def main():
    print("ğŸ§ª Flight MCP Server - Connection Tests")
    print("=" * 50)
    
    env_ok = test_environment()
    mongo_ok = test_mongodb()
    azure_ok = test_azure_openai()
    
    print("\n" + "=" * 50)
    print("ğŸ“Š Test Results:")
    print(f"  Environment: {'âœ… OK' if env_ok else 'âŒ Issues'}")
    print(f"  MongoDB: {'âœ… OK' if mongo_ok else 'âŒ Failed'}")
    print(f"  Azure OpenAI: {'âœ… OK' if azure_ok else 'âŒ Failed'}")
    
    if all([env_ok, mongo_ok]):
        print("\nğŸ‰ Basic server functionality should work!")
        if azure_ok:
            print("ğŸ¤– AI features are available!")
        else:
            print("âš ï¸  AI features will be disabled")
    else:
        print("\nâŒ Please fix the issues above before running the server")
        sys.exit(1)

